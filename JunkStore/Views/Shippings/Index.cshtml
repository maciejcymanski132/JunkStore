@model IEnumerable<JunkStore.Models.Shipping>
@{
ViewData["Title"] = "Index";
}
<h1>Manage shippings</h1>
<p>
    <a type="button" class="btn btn-info" asp-action="Create">Create New </a>
</p>
<table class="table table-hover">
   <thead>
      <tr class="table-dark">
         <th scope="row">
            @Html.DisplayNameFor(model => model.ShippingMethod)
         </th>
         <th scope="row">
            @Html.DisplayNameFor(model => model.TrackingNumber)
         </th >
         <th scope="row">
            @Html.DisplayNameFor(model => model.ShippingDate)
         </th>
         <th scope="row">
            @Html.DisplayNameFor(model => model.Status)
         </th>
         <th scope="row">
            @Html.DisplayNameFor(model => model.Order)
         </th>
         <th>Options</th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model) {
      <tr  class="table-dark">
         <td>
            @Html.DisplayFor(modelItem => item.ShippingMethod)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.TrackingNumber)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.ShippingDate)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Status)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Order.OrderId)
         </td>
         <td>
            <a asp-action="Edit" asp-route-id="@item.ShippingId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.ShippingId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.ShippingId">Delete</a>
         </td>
      </tr>
      }
   </tbody>
</table>
