@model IEnumerable<JunkStore.Models.ProductType>
@{
    ViewData["Title"] = "Index";
}

<h1>Manage product types</h1>

<p>
    <a type="button" class="btn btn-info" asp-action="Create">Create New </a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th scope="row">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="row"> Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
