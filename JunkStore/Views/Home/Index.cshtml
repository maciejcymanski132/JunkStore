
@model JunkStore.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Add some styling to the page */
    h1 {
        margin-top: 50px;
    }
    p {
        font-size: 18px;
        line-height: 1.5;
        margin-bottom: 50px;
    }
    .row {
        margin-top: 30px;
    }
    .col-md-3 {
        padding: 30px;
        border-radius: 5px;
        box-shadow: 0 0 10px #ccc;
    }
    .col-md-9 {
        padding: 30px;
        border-radius: 5px;
        box-shadow: 0 0 10px #ccc;
    }
    h3 {
        margin-top: 0;
    }
    ul {
        list-style-type: none;
        padding: 0;
    }
    li {
        margin-bottom: 10px;
    }
    img {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
    }
    h4 {
        margin-top: 0;
    }
    p {
        margin-top: 10px;
        font-size: 24px;
        font-weight: bold;
    }
    .btn {
        margin-top: 20px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome to JunkStore!</h1>
    <p>We offer a wide selection of usseles products at outrageous prices. Browse our categories to find what you're really not looking for, or use the search bar to find specific trash.</p>
    <div class="row">
        <div class="col-md-3">
            <h3>Popular Categories</h3>
            <ul>
                @foreach (var item in Model.ProductTypes)
                {
                   <li><a href="#">@item.Name</a></li>
                }
            </ul>
        </div>
        <div class="col-md-9">
            <h3>Featured Products</h3>
            <div class="row">
                @foreach (var item in Model.Products) {
                <div class="col-md-4">
                <img class="card-img-top" src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" alt="Product Image" width="350px"  height="350px">
                    <h4>@item.Name</h4>
                    <p>$@item.Price</p>
                    <a href="#" class="btn btn-primary">View Product</a>
                </div>
                }

</div>
</div>
</div>
</div>