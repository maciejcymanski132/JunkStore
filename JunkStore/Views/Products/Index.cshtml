@model IEnumerable<JunkStore.Models.Product>

@{
ViewData["Title"] = "Index";
}
<h1 class="text-center mb-4"> Products</h1>
<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4">
            <div class="card text-center" style="margin-bottom: 30px;">
                <img class="card-img-top" src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" alt="Product Image" width="350px"  height="350px">
                <div class="card-body">
                    <h3 class="card-title">@item.Name</h3>
                    <h5 class="card-text">@item.Price $</h5>
                    <p class="card-text">@item.Description</p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
    }
</div>


